<tools>
  <tool show="true" description="Créer un fichier DVI à partir des sources LaTeX" extensions=".tex" label="LaTeX → DVI" icon="compile_dvi">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.dvi</job>
  </tool>
  <tool show="true" description="Créer un fichier PDF à partir des sources LaTeX" extensions=".tex" label="LaTeX → PDF" icon="compile_pdf">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all --pdf $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.pdf</job>
  </tool>
  <tool show="true" description="Créer un fichier PostScript à partir des sources LaTeX" extensions=".tex" label="LaTeX → PS" icon="compile_ps">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all --ps $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.ps</job>
  </tool>
  <tool show="true" description="Voir le fichier DVI" extensions=".tex .dvi" label="Voir DVI" icon="view_dvi">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.dvi</job>
  </tool>
  <tool show="true" description="Voir le fichier PDF" extensions=".tex .pdf" label="Voir PDF" icon="view_pdf">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.pdf</job>
  </tool>
  <tool show="true" description="Voir le fichier PostScript" extensions=".tex .ps" label="Voir PS" icon="view_ps">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.ps</job>
  </tool>

  <tool show="false" description="Run BibTeX (bibliography)" extensions=".tex" label="BibTeX" icon="gtk-execute">
    <job mustSucceed="true" postProcessor="all-output">bibtex $shortname.aux</job>
  </tool>
  <tool show="false" description="Run MakeIndex" extensions=".tex" label="MakeIndex" icon="gtk-execute">
    <job mustSucceed="true" postProcessor="all-output">makeindex $shortname.idx</job>
  </tool>
  <tool show="false" description="Convert the DVI document to the PDF format" extensions=".tex" label="DVI → PDF" icon="gtk-convert">
    <job mustSucceed="true" postProcessor="all-output">dvipdf $shortname.dvi</job>
  </tool>
  <tool show="false" description="Convert the DVI document to the PostScript format" extensions=".tex" label="DVI → PS" icon="gtk-convert">
    <job mustSucceed="true" postProcessor="all-output">dvips $shortname.dvi</job>
  </tool>
  <tool show="false" description="Convert the PostScript document to the PDF format" extensions=".tex" label="PS → PDF" icon="gtk-convert">
    <job mustSucceed="true" postProcessor="all-output">ps2pdf $shortname.ps</job>
  </tool>
</tools>
